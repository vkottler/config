
"""
{{package["name"]}} - Package definition for distribution.
"""

# third-party
from vmklib.setup import setup

# internal
from {{package["name"]|replace("-", "_")}} import PKG_NAME, VERSION, DESCRIPTION


author_info = {
    "name": "{{python["author_info"]["name"]}}",
    "email": "{{python["author_info"]["email"]}}",
    "username": "{{python["author_info"]["username"]}}",
}
pkg_info = {
    "name": PKG_NAME,
    "slug": PKG_NAME.replace("-", "_"),
    "version": VERSION,
    "description": DESCRIPTION,
{% if "versions" in python %}
    "versions": [
{% for version in python["versions"] %}
        "{{version}}",
{% endfor %}
    ],
{% endif %}
}
setup(
    pkg_info,
    author_info,
{% for arg in package["setup_args"] %}
    {{arg}},
{% endfor %}
)
